{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "./tsconfig.app.json",
	"compilerOptions": {
		"module": "esnext",
		"moduleResolution": "node",
		"noEmit": false,
		"emitDeclarationOnly": false,
		"esModuleInterop": true,
		"types": ["jest", "node"]
	},
	"include": ["**/*.ts", "**/*.d.ts", "**/*.test.ts", "**/*.spec.ts"]
}
